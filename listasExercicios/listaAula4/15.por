	funcao inicio ()
	{
		inteiro perimetro,area,base,altura
		escreva("Quanto vale a base do retângulo em centímetros? ")
		leia(base)
		escreva("\nQual a altura do retângulo em centímetros? ")
		leia(altura)
		perimetro=2*(base+altura)
		area=base*altura
		escreva("\nO perímetro do retângulo é: "+perimetro+" centímetros.")
		escreva("\nA área do retângulo é: "+area+" centímetros.")
		
		
		
		
		
		
		
	}
}